<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.clueminer</groupId>
    <artifactId>clueminer-parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>clueminer-parent</name>
    
    <repositories>
        <!--
        Repository hosting NetBeans modules, especially APIs.
        Versions are based on IDE releases, e.g.: RELEASE691
        To create your own repository, use: nbm:populate-repository
        -->
        <repository>
            <id>central</id>
            <name>Maven Repository Switchboard</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>netbeans</id>
            <name>NetBeans</name>
            <url>http://bits.netbeans.org/maven2/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>nbm-maven-plugin</artifactId>
                    <version>3.8</version>
                    <extensions>true</extensions>
                    <configuration>
                        <brandingToken>${brandingToken}</brandingToken>
                        <cluster>${brandingToken}</cluster>
                    </configuration>
                </plugin>
                <plugin>
                    <!-- NetBeans 6.9+ requires JDK 6 -->
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.5.1</version>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>2.4</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <modules>
        <module>branding</module>
        <module>application</module>
        <module>dataset-api</module>
        <module>math-api</module>
        <module>utils</module>
        <module>dataset-impl</module>
        <module>math-impl</module>
        <module>gui-utils</module>
        <module>math-plot</module>
        <module>math-io</module>
        <module>clustering-api</module>
        <module>xcalibour</module>
        <module>fixtures</module>
        <module>dataset-visualization</module>
        <module>jzy3d-convexhull</module>
        <module>dataset-io</module>
        <module>jzy3d-api</module>
        <module>clustering-impl</module>
        <module>clustering-gui</module>
        <module>export-impl</module>
        <module>project-api</module>
        <module>project-impl</module>
        <module>importer-api</module>
        <module>dendrogram</module>
        <module>perspective-api</module>
        <module>perspective-impl</module>
        <module>clustering-preview</module>
        <module>approximation-api</module>
        <module>approximation-impl</module>
        <module>molecule</module>
        <module>wellmap</module>
        <module>hts-api</module>
        <module>hts-fluorescence</module>
        <module>explorer</module>
        <module>infopanel</module>
        <module>gnuplot</module>
        <module>clustering-benchmark</module>
        <module>dataset-benchmark</module>
        <module>posturomed</module>
        <module>rtca-fixtures</module>
    </modules>

    <properties>
        <netbeans.version>RELEASE73</netbeans.version>
        <brandingToken>clueminer</brandingToken>
    </properties>
</project>